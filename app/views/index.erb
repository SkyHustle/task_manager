<a name="about"></a>
<div class="intro-header">
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <div class="intro-message">
                    <h1>All Tasks</h1>
                      <hr class="intro-divider">
                      <% @tasks.each do |task| %>
                        <ul class="list-inline intro-social-buttons tasks">
                            <li>
                              <a href="/tasks/<%= task.id %>" class="btn btn-default btn-lg"><%= task.id %>: <span class="network-name"><%= task.title %></span></a>
                              
                              <a href="/tasks/<%= task.id %>/edit" class="btn btn-default btn-lg" id="edit_button">Edit</a>
                              
                              <form action="/tasks/<%= task.id %>" method="POST">
                                <input type="hidden" name="_method" value="Delete">
                                <input type="submit" value="Delete" class="index-submit-btn">
                              </form>
                            </li>
                        </ul>
                      <% end %>
                </div>
            </div>
        </div>
    </div>
</div>